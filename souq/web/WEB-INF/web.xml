<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>loginCheck</servlet-name>
        <servlet-class>ApplicationServlets.loginCheck</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>registerCheck</servlet-name>
        <servlet-class>ApplicationServlets.registerCheck</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>customerList</servlet-name>
        <servlet-class>ApplicationServlets.customerList</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>deleteCustomer</servlet-name>
        <servlet-class>ApplicationServlets.deleteCustomer</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>productList</servlet-name>
        <servlet-class>ApplicationServlets.productList</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>saveProduct</servlet-name>
        <servlet-class>ApplicationServlets.saveProduct</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>deleteProduct</servlet-name>
        <servlet-class>ApplicationServlets.deleteProduct</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>editProduct</servlet-name>
        <servlet-class>ApplicationServlets.editProduct</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>updateProduct</servlet-name>
        <servlet-class>ApplicationServlets.updateProduct</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>loginCheck</servlet-name>
        <url-pattern>/loginCheck</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>registerCheck</servlet-name>
        <url-pattern>/registerCheck</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>customerList</servlet-name>
        <url-pattern>/customerList</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>deleteCustomer</servlet-name>
        <url-pattern>/deleteCustomer</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>productList</servlet-name>
        <url-pattern>/productList</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>saveProduct</servlet-name>
        <url-pattern>/saveProduct</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>deleteProduct</servlet-name>
        <url-pattern>/deleteProduct</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>editProduct</servlet-name>
        <url-pattern>/editProduct</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>updateProduct</servlet-name>
        <url-pattern>/updateProduct</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
